generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @map("_id")
  username  String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

model VerificationToken {
  id         String   @id @default(uuid()) @map("_id")
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model MenuItems {
  id          String      @id @default(uuid()) @map("_id")
  name        String
  description String?
  price       Float
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  OrderItem   OrderItem[]
}

model Order {
  id           String      @id @default(uuid()) @map("_id")
  customerName String?
  items        OrderItem[]
  subtotal     Float
  paymentType  PaymentType?
  Seating       String
  createdAt    DateTime    @default(now())
}

enum PaymentType {
  CASH
  CARD
}

model OrderItem {
  id        String @id @default(uuid()) @map("_id")
  orderId   String
  productId String
  quantity  Int

  order   Order     @relation(fields: [orderId], references: [id])
  product MenuItems @relation(fields: [productId], references: [id])
}
